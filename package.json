{
  "name": "scale-desktop-app",
  "version": "1.0.0",
  "description": "Desktop app for serial scale reading and API sync",
  "main": "main/index.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "release": "electron-builder --mac --win --linux --publish always",
    "postinstall": "electron-builder install-app-deps"
  },
  "author": "SuperPescaderiaDelRio",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "serialport": "^12.0.0",
    "electron-store": "^8.1.0",
    "auto-launch": "^5.0.6"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}
